<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a643.finalproject.AddAdMover">
    <EditText
        android:id="@+id/DateType"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:hint="When and Type"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.494" />

    <EditText
        android:id="@+id/infoMoving"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:hint="info about the moving"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/DateType"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.494" />


    <Button
        android:id="@+id/addNewMovingAd"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:text="Add the ad "

        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/infoMoving"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.494" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD NEW AD"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        android:textSize="30dp"/>

</android.support.constraint.ConstraintLayout>
